<% content_for :page_title, "About - " %>
<div class="page">
    <figure class="content-image">
        <%= image_tag @content.image_url, :width => "100%", :height => "auto" %>
    </figure>
    <div class="page-content">
        <h1><%= @content.title %></h1>
        <%= simple_format @content.body %>
        <%= link_to "Browse our reviews", reviews_path %>
    </div>
</div>