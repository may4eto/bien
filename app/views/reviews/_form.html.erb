<%= form_for @review do |f| %>
    <% if @review.errors.any? %>
        <div class="errors">
            <ul>
                <% @review.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>
    <div>
        <%= f.label :restaurant %>
        <%= f.text_field :restaurant%>
    </div>
    <div>
        <%= f.label :body %>
        <%= f.text_area :body, minlength: @min_length, id: "review_text" %>
    </div>
    <div>
        <%= f.label :score %>
        <%= f.number_field :score %>
    </div>
    <div>
        <%= f.label :ambiance %>
        <%= f.text_field :ambiance %>
    </div>
    <%= f.submit "Save review" %>
<% end %>
