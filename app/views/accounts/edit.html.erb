<div class="edit-account">
    <h2>Edit account</h2>
    <%= simple_form_for @current_user, url: account_path do |f| %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
        <%= f.button :submit, "Update account" %>
    <% end %>
    <%= link_to "Back to profile", @current_user %>
</div>